{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    // WatermelonDB uses legacy (Stage-2 / "experimental") decorators.
    // Without this, TS 5+ will type-check using the new decorator proposal
    // and you'll see "Unable to resolve signature of property decorator..."
    "experimentalDecorators": true,

    // Not needed for WatermelonDB; keep disabled unless you have a specific
    // reflection-based library that requires it.
    "emitDecoratorMetadata": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@domain/*": ["src/domain/*"],
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@interface/*": ["src/interface/*"],
    },
  },
}
